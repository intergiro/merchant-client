{
    "name": "@payfunc/merchant-client",
    "version": "0.0.4",
    "description": "Client for psp and acquirer",
    "author": "PayFunc",
    "license": "MIT",
    "repository": "https://github.com/payfunc/merchant-client",
    "bugs": {
        "url": "https://github.com/payfunc/merchant-client/issues"
    },
    "homepage": "https://payfunc.com/open-source/merchant-client",
    "private": false,
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "git": {
        "tagName": "v${version}"
    },
    "github": {
        "release": true
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.test.json"
            }
        },
        "transform": {
            "^.+\\.(j|t)sx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!(cloud-http|cryptly|authly|isoly|gracely|@payfunc)/.*)"
        ],
        "testEnvironment": "node",
        "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "node_modules/",
            "dist/"
        ],
        "collectCoverageFrom": [
            "**/*.{ts,tsx,js,jsx}",
            "!**/node_modules/**",
            "!**/dist/**"
        ],
        "preset": "ts-jest",
        "testMatch": null
    },
    "scripts": {
        "dev": "watch 'npm run build' .",
        "lint": "eslint '*/**/*.{js,ts,tsx}'",
        "fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "build": "tsc -p .",
        "test": "jest --maxWorkers=2",
        "test:watch": "watch jest",
        "prepare": "npm run build",
        "clean": "rm -rf dist node_modules coverage"
    },
    "dependencies": {
        "@payfunc/model": "payfunc/model#elint-prettierx-bump",
        "@payfunc/model-acquirer": "0.1.74",
        "@payfunc/model-base": "0.1.22",
        "@payfunc/model-card": "0.2.24",
        "@payfunc/model-log": "0.1.9",
        "gracely": "0.1.8"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/isomorphic-fetch": "^0.0.35",
        "@types/jest": "^27.0.2",
        "@types/node-fetch": "^3.0.3",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "babel-core": "^6.26.3",
        "babel-jest": "^27.2.4",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-standardize": "^0.9.1",
        "eslint-plugin-prettierx": "github:robinnedergard/eslint-plugin-prettierx#master",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "isomorphic-fetch": "^3.0.0",
        "jest": "^27",
        "prettierx": "github:robinnedergard/prettierx#newline-before-clause-sync",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3",
        "watch": "^1.0.2"
    }
}
