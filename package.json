{
    "name": "@payfunc/merchant-client",
    "version": "0.0.2",
    "description": "Client for psp and acquirer",
    "author": "PayFunc",
    "license": "MIT",
    "repository": "https://github.com/payfunc/merchant-client",
    "bugs": {
        "url": "https://github.com/payfunc/merchant-client/issues"
    },
    "homepage": "https://payfunc.com/open-source/merchant-client",
    "private": false,
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "git": {
        "tagName": "v${version}"
    },
    "github": {
        "release": true
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.test.json"
            }
        },
        "transform": {
            "^.+\\.(j|t)sx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!(cloud-http|cryptly|authly|isoly|gracely|@payfunc)/.*)"
        ],
        "testEnvironment": "node",
        "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "node_modules/",
            "dist/"
        ],
        "collectCoverageFrom": [
            "**/*.{ts,tsx,js,jsx}",
            "!**/node_modules/**",
            "!**/dist/**"
        ],
        "preset": "ts-jest",
        "testMatch": null
    },
    "scripts": {
        "dev": "watch 'npm run build' .",
        "lint": "eslint '*/**/*.{js,ts,tsx}'",
        "fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "build": "tsc -p .",
        "test": "jest --maxWorkers=2",
        "test:watch": "watch jest",
        "prepare": "npm run build",
        "clean": "rm -rf dist node_modules coverage"
    },
    "dependencies": {
        "@payfunc/model": "payfunc/model#me-client",
        "@payfunc/model-acquirer": "payfunc/model-acquirer#model-base-bump",
        "@payfunc/model-base": "payfunc/model-base#connection",
        "@payfunc/model-card": "payfunc/model-card#model-base-bump",
        "@payfunc/model-log": "payfunc/model-log#connection",
        "cloud-http": "0.0.26",
        "dotenv": "^8.2.0",
        "gracely": "^0.1.7"
    },
    "devDependencies": {
        "@babel/core": "^7.11.0",
        "@cloudflare/workers-types": "^2.2.2",
        "@types/isomorphic-fetch": "0.0.35",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.0.13",
        "@types/node-fetch": "^2.5.12",
        "@typescript-eslint/eslint-plugin": "4.1.1",
        "@typescript-eslint/parser": "4.1.1",
        "babel-core": "^6.26.3",
        "babel-jest": "^26.0.1",
        "eslint": "7.9.0",
        "eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "isomorphic-fetch": "^3.0.0",
        "jest": "^26.4.2",
        "prettierx": "github:simonmika/prettierx#newline-before-clause",
        "ts-jest": "^26.4.0",
        "typescript": "^4.0.3",
        "watch": "^1.0.2"
    }
}
